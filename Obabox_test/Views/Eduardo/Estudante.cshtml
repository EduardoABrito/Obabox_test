
@{
    ViewBag.Title = "Estudante";
}

<h2>Estudantes <small class="fw-lighter">Consulta</small></h2>
<div class="row">
    <div class="col-md-2 m-1">
        <div>
            <label for="Identificador">Identificador</label>
            <input type="text" id="Identificador" class="form-control"/>
        </div>
    </div>
    <div class="col-md-2 m-1">
        <div>
            <label for="Nome">Nome</label>
            <input type="text" id="Nome" class="form-control"/>
        </div>        
    </div>
    <div class="col-md-2 m-1">
        <div>
            <label for="Curso">Curso</label>
            <input type="text" id="Curso" class="form-control"/>
        </div>
       
    </div>
    <div class="col-md-2 m-1">
        <div>
            <label for="Status">Status</label>
            <select class="form-select" id="Status">
                <option value="2">Todos</option>
                <option value="1">Sim</option>
                <option value="0">Não</option>
            </select>
        </div>
    </div>
    <div class="col-md-2 m-1 justify-content-center align-self-end d-flex">
        <a href="" class="btn btn-primary mx-1" id="buscar">Buscar</a>
        <a href="/Eduardo/EstudanteEditar" class="btn btn-success mx-1">Novo</a>
    </div>
</div>
<div>
    <div>
        <h3>Estudantes Cadastrados</h3>
    </div>
    <table class="table table-bordered table-hover" id="table_estudantes">
        <thead>
            <tr>
                <th>Identificador</th>
                <th>Nome</th>
                <th>Curso</th>
                <th>Data Nascimento</th>
                <th>Ativo</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>

        </tbody>
    </table>
</div>
<script src="~/Content/Eduardo/Script/Estudante.js" defer></script>